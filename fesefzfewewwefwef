-- LocalScript (StarterPlayerScripts)

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")
local workspace = game:GetService("Workspace")

-- ðŸ”¹ Duplicar tamaÃ±o del HumanoidRootPart
hrp.Size = hrp.Size * 2

-- FunciÃ³n para obtener todas las partes llamadas "Money"
local function getMoneyParts()
    local parts = {}
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Name == "Money" then
            table.insert(parts, part)
        end
    end
    return parts
end

-- Loop infinito que teletransporta el personaje cada 0.2s
spawn(function()
    while true do
        local moneyParts = getMoneyParts()
        for _, part in pairs(moneyParts) do
            if character and character.Parent then
                hrp.CFrame = part.CFrame + Vector3.new(0, 3, 0) -- mover todo el Character con el HRP
            end
            wait(0.2)
        end
        wait(0.2)
    end
end)
